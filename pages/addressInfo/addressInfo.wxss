.addressBox{

}
.slide-image{
  width: 100%;
}
.addressInfo{
  padding:20px 20px 10px 20px;
  box-sizing: border-box;
  width: 100%;
}
.addressInfo .title{
  font-size:15px;
  letter-spacing: 1px;
  color: #333333;
}
.addressInfo .info{

}
.addressInfo .info .infoBox{
  font-size:0;
  padding: 5px 0 ;
  display: flex;
}
.addressInfo .info .infoBox .icon{
  flex:0 0 20px;
  vertical-align:bottom;
}
.addressInfo .info .infoBox .icon .img{
  width: 12px;
  height: 12px;
  position:relative;
  top:2px;
}
.addressInfo .info .infoBox .go{
  flex:0 0 20rpx;
  vertical-align:bottom;
}
.addressInfo .info .infoBox .imgOther{
  width:6px;
  height:12px;
}
.addressInfo .info .infoBox .textBox{
  flex: 1;
  margin-left: 10px;
  margin-right: 20px;
}
.addressInfo .info .infoBox .textBox .text{
  color: #777777;
  font-size:12px;
  letter-spacing: 1px;
  word-wrap: break-word; 
  word-break: normal;
  width: 100%;
  line-height: 25px;
  vertical-align:top;
}
.line{
  margin: 10px 0;
  margin-left: 30px;
  border-bottom: 1px solid #dedede;
}
.addressDriver{
  background: #e5e5e5;
  height: 10px;
}
.infoMain{
  color: #777777;
  letter-spacing: 1px;
  font-size:12px;
  text-indent: 27px;
}