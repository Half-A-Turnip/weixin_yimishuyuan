.page-body{
    text-align: center;
    position:fixed;
    width:100%;
    height:100%;
    /* display: flex; */
    /* flex-wrap: wrap; */
    /* align-items: center;
    justify-content: center; */
}
.pageBox{
    /* flex:1; */
    display: flex;
    flex-direction: column; 
    line-height: auto;
    height: 100%;
}
.line{
    width: 90%;
    margin-left: 5%;
    margin-bottom: 20px;
    margin-top: 10px;
    border-top: 1px solid rgba(0,0,0,0.1)
}
.img{
    width: 50px;
    height: 50px;
    margin-right: 30px;
    vertical-align: middle;
}
.btn{
    background: #fff;
    flex: 1;
    border: none;
    padding:20px 0;
    display:flex;
    justify-content:center;
    align-items:center;
}
.btn::after{
    border: 1px solid transparent;
}
.text{
    font-size:14px;
    color: #999;
    vertical-align: middle;
}