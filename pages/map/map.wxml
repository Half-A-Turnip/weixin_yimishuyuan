<view class="mapBox">
  <map id="map" 
       longitude="{{longitude}}" 
       latitude="{{latitude}}" 
       scale="14" 
       controls="{{controls}}" 
       bindcontroltap="controltap" 
       markers="{{markers}}" 
       bindmarkertap="markertap" 
       polyline="{{polyline}}" 
       bindregionchange="regionchange" 
       show-location>
</map>
</view>
