/*列表展示*/
.show-box{
    /* margin-top:51px; */
}
.show-box-li {
    padding: 15px;
    position: relative;
}
.show-box-li::after{
    border-bottom: 1px solid #dedede;
    content: '';
    position: absolute;
    width: 100%;
    bottom:0;
    left:0;
}
.show-box-li .img {
    height: 70px;
    width: 100px;
    padding-right: 15px;
}

.show-box-li .img image {
    width: 100px;
    height: 70px;
    background: transparent
}

.show-box-li .info .title {
    margin-top: -1px;
    height: 20px;
    line-height: 18px;
    color: #484848;
    font-size: 14px;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    overflow: hidden;
    text-overflow: ellipsis;
}

.show-box-li .info .infoAll {
    margin-top: 2px;
    height: 18px;
    line-height: 18px;
    color: #b9b2b2;
    font-size: 11px;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    overflow: hidden;
    text-overflow: ellipsis;
}

.show-box-li .price {
    margin: 0 0 4px 0;
    color: #ff6600;
    height: 27px;
    line-height: 27px;
}

.show-box-li .price .num {
    display: inline-block;
    vertical-align: middle;
}

.show-box-li .price i {
    font-size: 16px;
    font-weight: 700
}

.show-box-li .price .time {
    font-size: 10px;
    color: #ff7500;
    background: #fff2cb;
    padding: 2px;
    border-radius: 2px;
    margin-left: 10px
}

.show-box-li .price .time i {
    width: 16px;
    height: 16px;
    display: inline-block;
    background: url('../images/time.png');
    background-repeat: no-repeat;
    background-size: 16px 16px;
}

.show-box-li .spans {
    height: 20px;
}

.show-box-li .spans .hots {
    line-height: 21px;
}

.show-box-li .spans .shuyuan {
    font-size: 11px;
    line-height: 25px;
    color: #b0b0b0;
}

.show-box-li .spans .tag span {
    padding: 1px;
    font-size: 8px;
    margin-right: 2px;
    border: 1px solid;
}

.show-box-li .spans .hot {
    border: 1px solid #fe4f33;
    color: #fe4f33;
}

.show-box-li .spans .small {
    border: 1px solid #339efe;
    color: #339efe;
}

.show-box-li .spans .end {
    border: 1px solid #339efe;
    color: #339efe;
}

.flex {
    display: -webkit-box;
    display: -moz-box;
    display: -webkit-flex;
    display: flex;
}

.flex-item {
    display: block;
    -webkit-box-flex: 1;
    -moz-box-flex: 1;
    -webkit-flex: 1;
    -ms-flex: 1;
    flex: 1;
    min-width: 1px;
}

.f-box {
    display: -webkit-box;
    display: -moz-box;
    display: -webkit-flex;
    display: flex;
}

.f-main-justify {
    -webkit-box-pack: justify;
    -moz-box-pack: justify;
    -webkit-justify-content: space-between;
    justify-content: space-between;
}
.show-box-li .spans .tag .span {
    padding: 1px;
    font-size: 8px;
    margin-right: 2px;
    border: 1px solid;
}
.label-primary {
    border-color: #4db3f9;
    color: #4db3f9
}

.label-success {
    border-color: #78b421;
    color: #78b421
}

.label-warning {
    border-color: #feb387;
    color: #feb387
}
