@import "../classSpan/classSpan.wxss";
.search-container{
    overflow: hidden;
}
.search {
    background: #fff;
    position: fixed;
    width: 100%;
    z-index: 99;
}
.classSearch {
    height: 50px;
    line-height: 50px;
    display: flex;
    width: 100%;
    position: relative;
}
.classSearch::after{
    border-bottom: 1px solid #dedede;
    content: '';
    position: absolute;
    width: 100%;
    bottom:0;
}
.classSearch .classSearchLi {
    flex:1;
    text-align: center;
    font-size: 24rpx;
}

.classSearch .classSearchLi.active {
    color: #ff6600;
}
.classSearchLi .loudo{
    position:absolute;
    width:15px;
    height:15px;
    top:19px;
}

/*列表展示*/
.show-box{
    margin-top:51px;
}
.loading{
    width: 100%;
    display: flex;
    text-align: center;
    vertical-align: center;
    justify-content:center;
    padding:10px 0 ;
}
.loadingImage{
    width: 30px;
    height: 30px;
}