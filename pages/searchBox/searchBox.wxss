/* searchBox.wxss */
.selectMore {
    display: flex;
    flex-direction: column;
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background-color: rgba(0, 0, 0, 0.2);
    transition: all 0.3s linear;
    -moz-transition: all 0.3s linear;
    -webkit-transition: all 0.3s linear;
    -o-transition: all 0.3s linear;
    z-index: 99999999999;
}
.selectBox {
    background: #fff;
    flex: 1;
    overflow: hidden;
    overflow-y: auto;
}

.selectBoxGroup {
    
}
.selectContainer{
    font-size: 0;
    width: auto;
    margin: 5px 20px;
}
.selectBoxGroup .title {
    color: #333;
    font-size: 14px;
    font-weight: 600;
}

.selectBoxGroupSpan {
    margin-top: 5px;
    width: 100%;
    display: flex;
    flex-wrap: wrap;
    text-align: center;
    align-content: center;
}
.selectBoxGroupSpan input{
    width: 120px;
    margin-bottom: 5px;
    padding: 0 5px;
    height: 32px;
    border-radius: 2px;
    border: 1px solid #dedede;
}
.selectBoxGroupSpan .span {
    flex: 0 0 20%;
    color: #333;
    font-size: 12px;
    border: 1px solid #e3e3e3;
    padding: 3px 0;
    text-align: center;
    margin-right: 4%;
    margin-bottom: 4%;
    border-radius: 2px;
}

.selectBoxGroupSpan.price .span {
    flex: 0 0 28%;
}
.selectBoxGroupSpan .span.active {
    border: 1px solid #32b16c;
    color: #32b16c;
}

.driver {
    background: #e3e3e3;
    width: 100%;
    height: 1px;
}

/*btn*/
.selectBtns {
    flex: 0 0 50px;
    width: 100%;
    display: flex;
    background: #fff;
}

.selectBtns .btn {
    flex: 1;
    line-height: 50px;
    text-align: center;
    font-size: 14px;
    color: #444;
    border-top: 1px solid #dedede;
}
.selectBtns .btn.sure{
    color: #fff;
    background: #32b16c;
    border-top: 1px solid #32b16c;
}