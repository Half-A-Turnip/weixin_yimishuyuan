/*下拉*/
.addressBox {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 80rpx;
    left: 0;
    z-index: 999;
}

.addressBoxHidden {
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.3);
    z-index: -1;
    position: absolute;
}

.addressBoxShowDiv {
    overflow: hidden;
}

.addressBoxShow {
    z-index: 99;
    width: 100%;
    box-sizing: border-box;
    padding: 20rpx;
    background: #fff;
}

.shows {
    display: flex;
    width: 100%;
    flex-wrap: wrap;
    text-align: center;
}

.shows .span {
    flex: 0 0 25%;
    flex-direction: column;
    padding: 10rpx 0;
    box-sizing: border-box;
    border: 2rpx solid transparent;
}

.shows .span.active {
    /*border: 1px solid rgba(0, 0, 0, 0.1);*/
    color: #329432;
}